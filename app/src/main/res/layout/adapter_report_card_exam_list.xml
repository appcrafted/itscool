<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapter_report_card_exam_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CustomCardView"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/adapter_reportCard_examList_nameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="@dimen/primaryText"
                android:textStyle="bold"
                android:textColor="@color/textHeading"
                />

            <TextView
                android:id="@+id/adapter_reportCard_examList_statusTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Pass"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:background="@drawable/green_border"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.85"
                android:orientation="horizontal"
                android:gravity="start"
                android:paddingStart="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:text="@string/grandTotal"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/textHeading"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/adapter_reportCard_examList_totalTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:text="25/55"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/textHeading"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:text="@string/percentage"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/textHeading"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/adapter_reportCard_examList_percentageTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:text="80%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/textHeading"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.15"
                android:orientation="horizontal"
                android:gravity="end"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/adapter_reportCard_examList_gradeHeaderTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:text="@string/grade"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/textHeading"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/adapter_reportCard_examList_gradeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:text="A+"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/textHeading"
                    android:gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
