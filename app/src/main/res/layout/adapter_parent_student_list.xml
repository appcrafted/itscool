<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/parent_studentList_viewContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CustomCardView"
    >

    <RelativeLayout
        android:id="@+id/drawer_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/parent_studentList_studentImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/placeholder_user"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/parent_studentList_studentImage"
            >

            <TextView
                android:id="@+id/parent_studentList_studentNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textColor="@color/textHeading"
                android:layout_marginBottom="5dp"
                android:text="@string/empty"
                android:textSize="@dimen/primaryText"/>

            <TextView
                android:id="@+id/parent_studentList_studentClassTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parent_studentList_studentNameTV"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textColor="@color/textHeading"
                android:text="@string/empty"
                android:textSize="@dimen/secondaryText"/>

        </RelativeLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>

