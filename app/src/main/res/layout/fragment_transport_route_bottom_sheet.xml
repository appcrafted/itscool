<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp">

        <TextView
            android:id="@+id/transportRoute_bottomSheet_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textSize="@dimen/primaryText"
            android:textStyle="bold"
            android:textColor="@color/textHeading" />

        <ImageView
            android:id="@+id/transportRoute_bottomSheet_crossBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="12dp"
            android:src="@drawable/ic_close"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="8dp"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="@string/vehicleNo"
            android:textSize="@dimen/secondaryText"
            android:textStyle="bold"
            android:textColor="@color/textHeading"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/transportRoute_bottomSheet_vehicleNo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/secondaryText"
            android:textStyle="bold"
            android:textColor="@color/textHeading"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="8dp"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="@string/vehicleModel"
            android:textSize="@dimen/secondaryText"
            android:textStyle="bold"
            android:textColor="@color/textHeading"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/transportRoute_bottomSheet_vehicleModel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/secondaryText"
            android:textStyle="bold"
            android:textColor="@color/textHeading"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="8dp"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="@string/made"
            android:textSize="@dimen/secondaryText"
            android:textStyle="bold"
            android:textColor="@color/textHeading"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/transportRoute_bottomSheet_vehicleMade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/secondaryText"
            android:textStyle="bold"
            android:textColor="@color/textHeading"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="8dp"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="@string/driverName"
            android:textSize="@dimen/secondaryText"
            android:textStyle="bold"
            android:textColor="@color/textHeading"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/transportRoute_bottomSheet_driverName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/secondaryText"
            android:textStyle="bold"
            android:textColor="@color/textHeading"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="8dp"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="@string/driverLicence"
            android:textSize="@dimen/secondaryText"
            android:textStyle="bold"
            android:textColor="@color/textHeading"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/transportRoute_bottomSheet_driverLicence"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/secondaryText"
            android:textStyle="bold"
            android:textColor="@color/textHeading"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="8dp"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="@string/driverContact"
            android:textSize="@dimen/secondaryText"
            android:textStyle="bold"
            android:textColor="@color/textHeading"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/transportRoute_bottomSheet_driverContact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/secondaryText"
            android:textStyle="bold"
            android:textColor="@color/textHeading"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>