<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:weightSum="4">

    <TextView
        android:id="@+id/adapter_student_hostelDetail_roomTypeTV"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:textSize="@dimen/secondaryText"
        android:textColor="@color/textHeading"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/adapter_student_hostelDetail_bednoTV"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/secondaryText"
        android:textColor="@color/textHeading"
        android:textStyle="bold"
        />


        <TextView
            android:id="@+id/adapter_student_hostelDetail_roomNoTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:textSize="@dimen/secondaryText"
            android:textColor="@color/textHeading"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/adapter_student_hostelDetail_roomCostTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/secondaryText"
            android:gravity="right"
            android:textColor="@color/textHeading"
            android:textStyle="bold"
            />

    </LinearLayout>
