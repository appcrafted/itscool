<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        >

        <TextView
            android:id="@+id/hostel_bottomSheet_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="@dimen/primaryText"
            android:textStyle="bold"
            android:textColor="@color/textHeading"
            android:padding="10dp"
            />

        <ImageView
            android:id="@+id/hostel_bottomSheet_crossBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="12dp"
            android:src="@drawable/ic_close"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:textStyle="bold"
            android:textColor="@color/textHeading"
            android:textSize="@dimen/secondaryText"
            android:text="@string/hostelRoomType"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/textHeading"
            android:textSize="@dimen/secondaryText"
            android:text="@string/noofbed"
            />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/textHeading"
                android:textSize="@dimen/secondaryText"
                android:text="@string/hostelRoomNo"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="@color/textHeading"
                android:textSize="@dimen/secondaryText"
                android:text="@string/hostelRoomCost"
                />



    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/hostel_bottomSheet_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v7.widget.RecyclerView>




</LinearLayout>