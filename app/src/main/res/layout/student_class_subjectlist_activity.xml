<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardPreventCornerOverlap="false"
                android:elevation="8dp"
                android:clipToPadding="false"
                android:layout_marginEnd="@dimen/card_end"
                android:layout_marginStart="@dimen/card_start"
                android:layout_marginTop="@dimen/card_top"
                android:layout_marginBottom="@dimen/card_bottom"
                android:padding="10dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/classTimetable_englishHeader"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:textSize="@dimen/primaryText"
                        android:textStyle="bold"
                        android:textColor="@color/textHeading"
                       />

                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:layout_margin="10dp">

                        <TextView
                            android:textSize="@dimen/secondaryText"
                            android:textStyle="bold"
                            android:textColor="@color/textHeading"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/time" />

                        <TextView
                            android:textSize="@dimen/secondaryText"
                            android:textStyle="bold"
                            android:textColor="@color/textHeading"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/day" />

                        <TextView
                            android:textSize="@dimen/secondaryText"
                            android:textStyle="bold"
                            android:textColor="@color/textHeading"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/staff" />

                        <TextView
                            android:textSize="@dimen/secondaryText"
                            android:textStyle="bold"
                            android:textColor="@color/textHeading"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="@string/hostelRoomNo" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/classSubject_englishList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:fastScrollEnabled="false"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardPreventCornerOverlap="false"
                android:elevation="8dp"
                android:clipToPadding="false"
                android:layout_marginEnd="@dimen/card_end"
                android:layout_marginStart="@dimen/card_start"
                android:layout_marginTop="@dimen/card_top"
                android:layout_marginBottom="@dimen/card_bottom"
                android:padding="10dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/classSubject_scienceHeader"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:textColor="@color/textHeading"
                        android:textSize="@dimen/primaryText"
                        android:textStyle="bold" />

                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:layout_margin="10dp">

                        <TextView
                            android:textSize="@dimen/secondaryText"
                            android:textStyle="bold"
                            android:textColor="@color/textHeading"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/time" />

                        <TextView
                            android:textSize="@dimen/secondaryText"
                            android:textStyle="bold"
                            android:textColor="@color/textHeading"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/day" />

                        <TextView
                            android:textSize="@dimen/secondaryText"
                            android:textStyle="bold"
                            android:textColor="@color/textHeading"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/staff" />

                        <TextView
                            android:textSize="@dimen/secondaryText"
                            android:textStyle="bold"
                            android:textColor="@color/textHeading"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="@string/hostelRoomNo" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/classTimetable_scienceList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:fastScrollEnabled="false"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardPreventCornerOverlap="false"
                android:elevation="8dp"
                android:clipToPadding="false"
                android:layout_marginEnd="@dimen/card_end"
                android:layout_marginStart="@dimen/card_start"
                android:layout_marginTop="@dimen/card_top"
                android:layout_marginBottom="@dimen/card_bottom"
                android:padding="10dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/classTimetable_mathsHeader"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:textSize="@dimen/primaryText"
                        android:textStyle="bold"
                        android:textColor="@color/textHeading"
                         />

                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:layout_margin="10dp">

                        <TextView
                            android:textSize="@dimen/secondaryText"
                            android:textStyle="bold"
                            android:textColor="@color/textHeading"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/time" />

                        <TextView
                            android:textSize="@dimen/secondaryText"
                            android:textStyle="bold"
                            android:textColor="@color/textHeading"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/day" />

                        <TextView
                            android:textSize="@dimen/secondaryText"
                            android:textStyle="bold"
                            android:textColor="@color/textHeading"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/staff" />

                        <TextView
                            android:textSize="@dimen/secondaryText"
                            android:textStyle="bold"
                            android:textColor="@color/textHeading"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="@string/hostelRoomNo" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/classSubject_mathsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:fastScrollEnabled="false"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp">


                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardPreventCornerOverlap="false"
                android:elevation="8dp"
                android:clipToPadding="false"
                android:layout_marginEnd="@dimen/card_end"
                android:layout_marginStart="@dimen/card_start"
                android:layout_marginTop="@dimen/card_top"
                android:layout_marginBottom="@dimen/card_bottom"
                android:padding="10dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/classTimetable_hindiHeader"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:textSize="@dimen/primaryText"
                        android:textStyle="bold"
                        android:textColor="@color/textHeading"
                        />

                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:layout_margin="10dp">

                        <TextView
                            android:textSize="@dimen/secondaryText"
                            android:textStyle="bold"
                            android:textColor="@color/textHeading"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/time" />

                        <TextView
                            android:textSize="@dimen/secondaryText"
                            android:textStyle="bold"
                            android:textColor="@color/textHeading"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/day" />

                        <TextView
                            android:textSize="@dimen/secondaryText"
                            android:textStyle="bold"
                            android:textColor="@color/textHeading"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/staff" />

                        <TextView
                            android:textSize="@dimen/secondaryText"
                            android:textStyle="bold"
                            android:textColor="@color/textHeading"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="@string/hostelRoomNo" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/classSubject_hindiList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        app:fastScrollEnabled="false">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>