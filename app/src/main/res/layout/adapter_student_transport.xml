<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/adapter_student_exam_schedule_exam_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        style="@style/CustomCardView"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/studentTransportAdapter_nameHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_nav_transport"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/studentTransportAdapter_routeNameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/primaryText"
                    android:textStyle="bold"
                    android:textColor="@color/textHeading"
                    android:padding="5dp"
                    />

            </LinearLayout>

            <TableLayout
                android:id="@+id/studentTransportAdapter_vehicleTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                >

            </TableLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>

