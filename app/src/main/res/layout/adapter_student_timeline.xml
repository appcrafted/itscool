<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_marginStart="10dp"
        android:id="@+id/item_line">


        <View
            android:id="@+id/adapter_studentTimeline_line"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:layout_centerHorizontal="true"
            />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circle_blue"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/adapter_studentTimeline_titleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:text="title"
                android:textSize="@dimen/primaryText"
                android:textStyle="bold"
                android:textColor="@color/textHeading"
                android:layout_toStartOf="@+id/adapter_studentTimeline_downloadBtn"
                />

            <ImageView
                android:id="@+id/adapter_studentTimeline_downloadBtn"
                android:layout_alignParentEnd="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_nav_download"
                android:padding="5dp"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/adapter_studentTimeline_dateTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/secondaryText"
            android:text="20"
            android:textStyle="bold"
            android:gravity="start"
            />

        <TextView
            android:id="@+id/adapter_studentTimeline_subtitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="subtitle"
            android:textColor="@color/textHeading"
            android:textStyle="bold"
            android:textSize="@dimen/secondaryText"
            />

        <!-- other views -->

    </LinearLayout>
</LinearLayout>