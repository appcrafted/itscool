<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CustomCardView"
        >

        <RelativeLayout
            android:id="@+id/adapter_studentHostel_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/adapter_hostel_icon"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_hostel"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:id="@+id/adapter_studentHostel_hostelNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:textSize="@dimen/primaryText"
                android:textColor="@color/textHeading"
                android:textStyle="bold"
                android:gravity="center|start"
                android:background="@color/transparent"
                android:layout_toEndOf="@+id/adapter_hostel_icon"
                android:layout_marginEnd="80dp"
                />

            <LinearLayout
                android:id="@+id/adapter_studentHostel_viewBtn"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/transparent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_view"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view"
                    android:textColor="@color/hyperLink"/>

            </LinearLayout>



        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>